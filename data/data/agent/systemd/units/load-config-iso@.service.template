[Unit]
Description=If a config ISO is mounted, copy its files to the system
Wants=network-online.target
After=network-online.target agent-verify-auth-token-expiry.service
Requires=agent-verify-auth-token-expiry.service

[Service]
Environment=CONFIG_IMAGE_FILES={{.ConfigImageFiles}}
Type=oneshot
Restart=on-failure
RestartSec=10
RemainAfterExit=True
ExecStart=/usr/local/bin/load-config-iso.sh %I

[Install]
WantedBy=multi-user.target
