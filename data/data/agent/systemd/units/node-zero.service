[Unit]
Description=Identify node zero to run OpenShift Assisted Installation Service on
Wants=network-online.target
After=network-online.target agent-verify-auth-token-expiry.service
Requires=agent-verify-auth-token-expiry.service

[Service]
Type=oneshot
RemainAfterExit=True
ExecStart=/usr/local/bin/set-node-zero.sh

[Install]
WantedBy=multi-user.target
